# bpytop template for wpgtk
# by improvisedexplosivedevice

# Colors should be in 6 or 2 character hexadecimal or single spaced rgb decimal: "#RRGGBB", "#BW" or "0-255 0-255 0-255"
# example for white: "#ffffff", "#ff" or "255 255 255".

# All graphs and meters can be gradients
# For single color graphs leave "mid" and "end" variable empty.
# Use "start" and "end" variables for two color gradient
# Use "start", "mid" and "end" for three color gradient


# TEXT
theme[main_fg]="#c7c6dc"          # Main text color
theme[title]="#c7c6dc"            # Title color for boxes
theme[hi_fg]="#47427B"            # Higlight color for keyboard shortcuts
theme[inactive_fg]="#8b8a9a"       # Color of inactive/disabled text
theme[graph_text]="#6862A9"       # Color of text appearing on top of graphs, i.e uptime and current network graph scaling


# OTHER
theme[main_bg]="#0B0A13"           # Main background, empty for terminal default, need to be empty if you want transparent background
theme[selected_bg]="#686493"       # Background color of selected item in processes box
theme[selected_fg]="#c7c6dc"       # Foreground color of selected item in processes box
theme[proc_misc]="#6862A9"        # Misc colors for processes box including mini cpu graphs, details memory graph and details status text


# OUTLINES
theme[cpu_box]="#47427B"           # Cpu box outline color
theme[mem_box]="#423D72"           # Memory/disks box outline color
theme[net_box]="#47427B"           # Net up/down box outline color
theme[proc_box]="#423D72"          # Processes box outline color
theme[div_line]="#423D72"          # Box divider line and small boxes line color


# METERS
theme[meter_bg]="#8b8a9a"          # Background color of the percentage meters
theme[used_start]="#6862A9"        # Mem/Disk used meter
theme[used_mid]=""
theme[used_end]="#6862A9"
theme[available_start]="#827DB9"   # Mem/Disk available meter
theme[available_mid]=""
theme[available_end]="#827DB9"
theme[cached_start]="#6862A9"      # Mem/Disk cached meter
theme[cached_mid]=""
theme[cached_end]="#6862A9"
theme[free_start]="#827DB9"        # Mem/Disk free meter
theme[free_mid]=""
theme[free_end]="#827DB9"


# GRAPHS
theme[temp_start]="#367bf0"         # Temperature graph colors
theme[temp_mid]="#b8174c"
theme[temp_end]="#d41919"
theme[cpu_start]="#47427B"        # CPU graph colors
theme[cpu_mid]="#46445A"
theme[cpu_end]="#423D72"
theme[download_start]="#6862A9"    # Download graph colors
theme[download_mid]="#423D72"
theme[download_end]="#423D72"  
theme[upload_start]="#46445A"     # Upload graph colors
theme[upload_mid]="#46445A"
theme[upload_end]="#827DB9"
theme[process_start]="#6862A9"    # Process box color gradient for threads, mem and cpu usage
theme[process_mid]="#827DB9"
theme[process_end]="#514C8D"