# bpytop template for wpgtk
# by improvisedexplosivedevice

# Colors should be in 6 or 2 character hexadecimal or single spaced rgb decimal: "#RRGGBB", "#BW" or "0-255 0-255 0-255"
# example for white: "#ffffff", "#ff" or "255 255 255".

# All graphs and meters can be gradients
# For single color graphs leave "mid" and "end" variable empty.
# Use "start" and "end" variables for two color gradient
# Use "start", "mid" and "end" for three color gradient


# TEXT
theme[main_fg]="#aebad2"          # Main text color
theme[title]="#aebad2"            # Title color for boxes
theme[hi_fg]="#284EA9"            # Higlight color for keyboard shortcuts
theme[inactive_fg]="#798293"       # Color of inactive/disabled text
theme[graph_text]="#4553C3"       # Color of text appearing on top of graphs, i.e uptime and current network graph scaling


# OTHER
theme[main_bg]="#0A0314"           # Main background, empty for terminal default, need to be empty if you want transparent background
theme[selected_bg]="#96429b"       # Background color of selected item in processes box
theme[selected_fg]="#aebad2"       # Foreground color of selected item in processes box
theme[proc_misc]="#4553C3"        # Misc colors for processes box including mini cpu graphs, details memory graph and details status text


# OUTLINES
theme[cpu_box]="#284EA9"           # Cpu box outline color
theme[mem_box]="#573E47"           # Memory/disks box outline color
theme[net_box]="#284EA9"           # Net up/down box outline color
theme[proc_box]="#573E47"          # Processes box outline color
theme[div_line]="#573E47"          # Box divider line and small boxes line color


# METERS
theme[meter_bg]="#798293"          # Background color of the percentage meters
theme[used_start]="#4553C3"        # Mem/Disk used meter
theme[used_mid]=""
theme[used_end]="#4553C3"
theme[available_start]="#BC53C2"   # Mem/Disk available meter
theme[available_mid]=""
theme[available_end]="#BC53C2"
theme[cached_start]="#4553C3"      # Mem/Disk cached meter
theme[cached_mid]=""
theme[cached_end]="#4553C3"
theme[free_start]="#BC53C2"        # Mem/Disk free meter
theme[free_mid]=""
theme[free_end]="#BC53C2"


# GRAPHS
theme[temp_start]="#367bf0"         # Temperature graph colors
theme[temp_mid]="#b8174c"
theme[temp_end]="#d41919"
theme[cpu_start]="#284EA9"        # CPU graph colors
theme[cpu_mid]="#232F98"
theme[cpu_end]="#573E47"
theme[download_start]="#4553C3"    # Download graph colors
theme[download_mid]="#573E47"
theme[download_end]="#573E47"  
theme[upload_start]="#232F98"     # Upload graph colors
theme[upload_mid]="#232F98"
theme[upload_end]="#BC53C2"
theme[process_start]="#4553C3"    # Process box color gradient for threads, mem and cpu usage
theme[process_mid]="#BC53C2"
theme[process_end]="#5459B1"
